{
  "compilerOptions": {
    "verbatimModuleSyntax": true,
		"isolatedModules": true,
    "moduleResolution": "bundler",
		"module": "esnext",
		"noEmit": true,
		"target": "esnext",
    "forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
    "allowJs": true,
		"checkJs": true,
  },
  "include": [
    "./lib/**/*.ts"
  ],
  "exclude": [
    "./node_modules/**"
  ]
}
